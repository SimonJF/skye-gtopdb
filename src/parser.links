open MonadicParser;

# A simple parser for the GtoPdb markup.
# Limitations right now:
#  1. Cannot handle '<' and '>' characters which do not refer to tags
#  2. Doesn't handle HTML attributes yet

typename Markup = [|
    Empty
  | Append:(Markup, Markup)
  | Text:String
  | ReferenceTag:Int
  | LigandTag:Int
  | HTMLTag:((tagName: String, contents:Markup))
|];

typename ParseResult = [| OK:Markup | Error:String |];

fun mkHtmlTag(tagName, contents) {
  HTMLTag(tagName=tagName, contents=contents)
}

# Useful parser combinators for us

# streamChar: runs of characters that are not used to start or end tags.
var streamChar = sat(fun(c) { implode([c]) =~ /[^<>]/ });

var textStream =
  many1(streamChar) >>=
  fun(str) { return(Text(implode(str))) };

fun htmlTag() {
  word() >>= fun (tagName) {
  char('>') >>
  markup() >>= fun (contents) {
  stringE("</") >>
  string(tagName) >>
  char('>') >>
  return(mkHtmlTag(implode(tagName), contents))
  }}
}

fun brTag() {
  (stringE("br>") ++!
   stringE("br/>") ++!
   stringE("br />")) >>
  return(mkHtmlTag("br", Empty))
}

fun referenceTag() {
  stringE("Reference") >>
  spaces() >>
  stringE("id") >>
  char('=') >>
  nat >>= fun(id) {
  stringE("/>") >>
  return(ReferenceTag(id))
  }
}

fun ligandTag() {
  stringE("Ligand") >>
  spaces() >>
  stringE("id") >>
  char('=') >>
  nat >>= fun(id) {
  stringE("/>") >>
  return(LigandTag(id))
  }
}

fun tag() {
  char('<') >>
  brTag() ++! referenceTag() ++! ligandTag() ++! htmlTag()
}

sig markup : () {}~> Parser(Markup)
fun markup() {

  fun markupInner() {
    tag() ++!
    textStream
    #(char('<') >> return(Text("<"))) ++!
    #(char('>') >> return(Text(">")))
  }

  many(markupInner()) >>= fun(xs) {
    return(fold_right(fun(x, acc) { Append(x, acc) }, Empty, xs))
  }
}

fun parse(str) {
  switch((markup())(explode(str))) {
    case [] -> Error("Nothing matched.")
    case [(markup, [])] -> OK(markup)
    case [(markup, xs)] -> Error("Unconsumed input: " ^^ implode(xs))
    case xs -> Error("Ambiguous parse: " ^^ (show(xs)))
  }
}


